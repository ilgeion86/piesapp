div.grid-item-4__subgrid
    display grid
    grid-template-columns repeat(3,minmax(auto,1fr))
    grid-template-rows minmax(auto,1fr) minmax(400px,auto) minmax(auto,1fr) 

    grid-template-areas "button-1 button-2 button-3"\
    "mc mc mc"\
    ". . ."

.b-1,.b-2,.b-3
    width 100%
    height 50px
    font-size 1.5em
    color white
    background-color rgba(113,212,228,0.6)
    border 2px solid rgb(31,145,162)
    border-right none
.subgrid__item button:hover
    background-color rgba(113,150,228,0.6)

for i in 1..3
    .subgrid__item-{i}
        grid-area button- + i
        border 1px solid black
.subgrid__item-4
    grid-area mc
    border 1px solid black
    color black
    background-color rgba(255,255,255,0.5)

@media (max-device-width:1375px)
    .b-1,.b-2,.b-3
        font-size 0.8em
        padding 0