*
    margin 0
    padding 0
html,body    
    font-family: Helvetica, arial;
    width: 100%;
    height: 100%;
    color: black;
    font-size 24px
    background-color rgba(173, 221, 255, 1)
.grid-container
    display grid
    grid-template-columns 1fr minmax(375px,3fr) 1fr 5fr
    grid-template-rows repeat(4,minmax(1fr,auto))
    grid-template-areas "item1 item1 item2 item2"\
                        "item4 item4 item5 item6"\
                        ". . . ."
for i in 1..6
    .grid-item-{i}
      grid-area item + i

.grid-item-1
    height 20px

.grid-item-4, .grid-item-5, .grid-item-6
    background-color: rgba(229,236,244,0.4)
    margin 5px


#details, #marks
    display none
#t-order-details
    font-size 0.8em
    margin auto
    width:300px
    tbody tr td input
        height 20px
    
@media (max-device-width:800px)    
        
    .grid-container
        grid-template-columns minmax(370px,1fr)
        grid-template-areas "item1"\
                        "item2"\
                        "item5"\
                        "item6"\
                        "item4"
#t-order-details
    font-size 0.6em